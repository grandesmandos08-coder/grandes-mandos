<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#061E6A"
    tools:context=".Home">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="31dp"
        android:columnCount="2"
        android:padding="10dp"
        android:rowCount="2">

        <androidx.cardview.widget.CardView
            android:id="@+id/Protocoloscard"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"

            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="15dp">

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@drawable/back"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageView
                    android:layout_width="122dp"
                    android:layout_height="94dp"
                    android:layout_gravity="center|top"
                    android:layout_marginBottom="30dp"
                    android:src="@drawable/protocolo" />

                <TextView
                    android:layout_width="142dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center|bottom"
                    android:layout_marginTop="10dp"
                    android:text="@string/btnRepositorio"
                    android:textAlignment="center"
                    android:textColor="#DCDADA"
                    android:textSize="15sp"
                    android:textStyle="bold" />


            </androidx.coordinatorlayout.widget.CoordinatorLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/bitacoracard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="15dp">

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@drawable/back"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageView
                    android:layout_width="102dp"
                    android:layout_height="103dp"
                    android:layout_gravity="center|top"
                    android:layout_marginBottom="30dp"
                    android:src="@drawable/bitacora" />

                <TextView
                    android:layout_width="103dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center|bottom"
                    android:layout_marginTop="10dp"
                    android:text="@string/btnBitacora"
                    android:textAlignment="center"
                    android:textColor="#DCDADA"
                    android:textSize="15sp"
                    android:textStyle="bold" />


            </androidx.coordinatorlayout.widget.CoordinatorLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/entrevistacard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="15dp">

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@drawable/back"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageView
                    android:layout_width="104dp"
                    android:layout_height="94dp"
                    android:layout_gravity="center|top"
                    android:layout_marginBottom="30dp"
                    android:src="@drawable/entrevista" />

                <TextView
                    android:layout_width="136dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center|bottom"
                    android:layout_marginTop="10dp"
                    android:text="@string/btnEntrevistas"
                    android:textAlignment="center"
                    android:textColor="#DCDADA"
                    android:textSize="15sp"
                    android:textStyle="bold" />


            </androidx.coordinatorlayout.widget.CoordinatorLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/informescard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="15dp">

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@drawable/back"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageView
                    android:layout_width="105dp"
                    android:layout_height="92dp"
                    android:layout_gravity="center|top"
                    android:layout_marginBottom="30dp"
                    android:src="@drawable/informe" />

                <TextView
                    android:layout_width="135dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center|bottom"
                    android:layout_marginTop="10dp"
                    android:text="@string/btnInformes"
                    android:textAlignment="center"
                    android:textColor="#DCDADA"
                    android:textSize="15sp"
                    android:textStyle="bold" />


            </androidx.coordinatorlayout.widget.CoordinatorLayout>


        </androidx.cardview.widget.CardView>


    </GridLayout>




</FrameLayout>